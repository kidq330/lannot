bug-reports: "https://git.frama-c.com/pub/lannotate/-/issues"
tags: [
  "software testing"
  "Frama-C"
  "LTest"
]

build: [
  ["autoconf"] {dev}
  ["./configure"]
  [make "-j%{jobs}%"]
]

install: [
  [make "install"]
]

depends: [
  "ocaml" { >= "4.08.1" }
  "frama-c" { >= "25.0" & < "26.0" }
]
